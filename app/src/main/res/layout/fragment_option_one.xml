        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/abstract_design_background_1048_6726"
            tools:context="com.example.dana.android5778_7109_3610_03.controller.OptionOneFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="77dp"
                    android:layout_gravity="center"
                    android:fontFamily="casual"
                    android:text="About Us:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="40sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="casual"
                        android:text="Call us:"
                        android:textSize="30sp" />

                    <ImageButton
                        android:id="@+id/callButton"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="40dp"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:src="@android:drawable/stat_sys_phone_call" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:text="Email us:"
                        android:textSize="30sp" />

                    <ImageButton
                        android:id="@+id/emailButton"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="347dp"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:src="@android:drawable/sym_action_email" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visit our website:"
                        android:fontFamily="casual"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/url"
                        android:layout_width="243dp"
                        android:layout_height="38dp"
                        android:layout_gravity="left"
                        android:text="http://moodle.jct.ac.il/"
                        android:textColor="@android:color/holo_blue_dark"

                        android:textIsSelectable="true"
                        android:textSize="17sp" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
